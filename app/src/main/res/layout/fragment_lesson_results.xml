<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_8sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/learned"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_close"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_question_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        tools:listitem="@layout/item_results"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <LinearLayout
        android:id="@+id/ln_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_70sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingBottom="@dimen/_100sdp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_empty_design"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/whoops"
            android:textColor="#4A4451"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_medium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_don_t_have_any_design_yet"
            android:textColor="#4A4451"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:id="@+id/fr_loading"
        android:background="#4D333333"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>