<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius"
    android:layout_marginTop="@dimen/_8sdp"
    android:paddingHorizontal="@dimen/_8sdp"
    android:orientation="vertical"
   >
    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Câu gián tiếp:"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/roboto_regular"/>
    <TextView
        android:id="@+id/txt_structure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject + nói rằng + indirect speech."
        android:textColor="#808080"
        android:maxLines="2"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/roboto_regular"/>
      <TextView
        android:id="@+id/txt_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trong câu này, chúng ta sử dụng 'nói rằng' để truyền đạt thông tin từ người nói ban đầu một cách gián tiếp."
        android:textColor="#808080"
        android:maxLines="2"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/roboto_regular"/>
    <TextView
        android:id="@+id/txt_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anh ấy nói rằng anh ấy sẽ đến muộn."
        android:textColor="#808080"
        android:maxLines="2"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/roboto_regular"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#474747"
        android:layout_marginTop="@dimen/_6sdp"
        />
</LinearLayout>